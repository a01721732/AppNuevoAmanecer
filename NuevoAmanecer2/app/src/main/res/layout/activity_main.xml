<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#00AEEF">

            <Button
                android:id="@+id/buttonAdmin"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="705dp"
                android:backgroundTint="#d9ef20"
                android:text="Admin"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/button_rounded_edges"/>
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:translationY="-80dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="835dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/piano"
                tools:src="@drawable/piano" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="835dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/iconoLeon"
                tools:src="@drawable/iconoLeon" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="835dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/rompecabezas"
                tools:src="@drawable/rompecabezas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:translationY="-140dp">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="835dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/comunicador"
                tools:src="@drawable/comunicador" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="835dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/bomba"
                tools:src="@drawable/bomba" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="835dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/papa"
                tools:src="@drawable/papa" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>