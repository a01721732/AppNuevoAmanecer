<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DragDropActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00aeef"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnRegresarJuego3"
            android:layout_width="136dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/nuevoAmarillo"
            android:text="Regresar"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnNombreJuego3"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/nuevoAmarillo"
            android:text="Nombre del Juego (Nivel)"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnRegresarJuego3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- New GridLayout for puzzle pieces -->
    <GridLayout
        android:id="@+id/gridLayoutPuzzleSpaces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="6"
        android:columnCount="6"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gridLayoutPuzzlePieces"
        app:layout_constraintHorizontal_weight="1">

        <!-- ... Define the spaces for the puzzle pieces here ... -->

    </GridLayout>

    <!-- GridLayout for puzzle pieces -->
    <GridLayout
        android:id="@+id/gridLayoutPuzzlePieces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="4"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gridLayoutPuzzleSpaces"
        app:layout_constraintHorizontal_weight="1">

        <!-- ... Add your puzzle pieces here ... -->

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
