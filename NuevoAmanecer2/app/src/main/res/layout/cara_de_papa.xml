<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:id="@+id/relativeLayout"
    tools:context=".CaraDePapa">

    <ImageView
        android:id="@+id/papaView"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:contentDescription="@string/papa_sin_cara_content_description"
        android:translationX="300dp"
        android:translationY="200dp"
        app:srcCompat="@drawable/papa_sin_cara" />

    <ImageView
        android:id="@+id/ojosView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ojos" />

    <ImageView
        android:id="@+id/bocaLineaView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/boca_linea"
        android:translationX="120dp" />

    <ImageView
        android:id="@+id/topHatView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/top_hat"
        android:translationX="240dp" />


</RelativeLayout>