<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:id="@+id/relativeLayout"
    tools:context=".CaraDePapa">

    <ImageView
        android:id="@+id/papaView"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:contentDescription="@string/papa_sin_cara_content_description"
        android:translationX="300dp"
        android:translationY="200dp"
        app:srcCompat="@drawable/papa_sin_cara" />

    <ImageView
        android:id="@+id/ojosView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ojos" />

    <ImageView
        android:id="@+id/bocaLineaView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/boca_linea"
        android:translationX="120dp" />

    <ImageView
        android:id="@+id/topHatView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/top_hat"
        android:translationX="240dp" />

    <ImageView
        android:id="@+id/blueShoesView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blue_shoes"
        android:translationX="360dp" />

    <ImageView
        android:id="@+id/bootsView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/boots"
        android:translationX="480dp" />

    <ImageView
        android:id="@+id/cartoonyLeftArmView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cartoony_left_arm"
        android:translationX="600dp" />

    <ImageView
        android:id="@+id/cartoonyRightArmView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cartoony_right_arm"
        android:translationX="720dp" />

    <ImageView
        android:id="@+id/mustacheView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mustache"
        android:translationX="840dp" />

    <ImageView
        android:id="@+id/rightMuscleArmView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/right_muscle_arm"
        android:translationX="960dp" />

    <ImageView
        android:id="@+id/leftMuscleArmView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:rotationY="180"
        android:src="@drawable/right_muscle_arm"
        android:translationY="100dp" />

    <ImageView
        android:id="@+id/smileView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smile"
        android:translationX="120dp"
        android:translationY="100dp"/>

    <ImageView
        android:id="@+id/soccerShoesView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/soccer_shoes"
        android:translationX="240dp"
        android:translationY="100dp"/>


</RelativeLayout>