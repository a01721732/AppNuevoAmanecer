<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalizacionAlumno">

    <Spinner
        android:id="@+id/dropdownAlumno"
        android:layout_width="430dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/rounded_dropdown"
        app:layout_constraintStart_toEndOf="@+id/dropdownNivel"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnRegresarPersonalizacionAlumno"
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/nuevoAmarillo"
        android:text="Regresar"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_rounded_edges"/>
    />

    <Button
        android:id="@+id/btnPersonalizacionAlumno"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/nuevoAmarillo"
        android:text="Personalizacion"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_rounded_edges"/>
    />

    <Button
        android:id="@+id/btnComenzarPersonalizacionAlumno"
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/nuevoAmarillo"
        android:text="Comenzar"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_rounded_edges"/>
    />



    <Spinner
        android:id="@+id/dropdownNivel"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/rounded_dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>